{
    "version": 3,
    "configurePresets": [
        {
            "name": "linux-x64",
            "displayName": "Linux x64",
            "description": "Linux x64 configuration using vcpkg",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/linux-x64",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_TARGET_TRIPLET": "x64-linux",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "linux-x86",
            "displayName": "Linux x86",
            "description": "Linux x86 configuration using vcpkg",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/linux-x86",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_TARGET_TRIPLET": "x86-linux",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_C_FLAGS": "-m32",
                "CMAKE_CXX_FLAGS": "-m32"
            }
        },
        {
            "name": "windows-x64",
            "displayName": "Windows x64 (MinGW)",
            "description": "Windows x64 cross-compilation using MinGW and vcpkg",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/windows-x64",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_TARGET_TRIPLET": "x64-mingw-static",
                "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/cmake/mingw-w64-x86_64.cmake",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "windows-x86",
            "displayName": "Windows x86 (MinGW)",
            "description": "Windows x86 cross-compilation using MinGW and vcpkg",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/windows-x86",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_TARGET_TRIPLET": "x86-mingw-static",
                "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/cmake/mingw-w64-i686.cmake",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        }
    ],
    "buildPresets": [
